<!-- app/views/settings/index.html.erb -->
<div class="max-w-xl mx-auto bg-white rounded-3xl shadow-lg p-8 mt-8 space-y-6">
  <h2 class="text-2xl font-bold text-center">設定</h2>

  <%= form_with model: current_user, url: settings_path, method: :patch, local: true do |f| %>
    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700">メッセージのトーン</label>
      <%= f.select :tone_preference,
      User.tone_options_for_select.map { |label, key| [label, key.to_s] },
      {},
      class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>

    </div>
    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700">通知タイミング</label>
      <%= f.select :notification_time,
      User.notification_time_options.map { |label, key| [label, key.to_s] },
      {},
      class: "mt-1 w-full rounded border-gray-300 shadow-sm" %>
    </div>
    
    <div class="mb-4 flex items-center">
      <%= f.check_box :zero_pride, class: "rounded border-gray-300 mr-2" %>
      <label for="user_zero_pride" class="text-sm text-gray-700">
        ゼロはドヤ顔で表示したい
      </label>
    </div>

    <%= f.submit "保存", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  <% end %>

  <div class="text-sm text-gray-500 text-center pt-4">
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-red-500 hover:underline" %>
  </div>
</div>
