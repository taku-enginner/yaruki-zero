<% if @already_recorded %>
  <div class="text-center text-gray-500 p-8 rounded-2xl bg-white shadow-inner space-y-4">
    <p class="text-lg font-medium tracking-wide">今日のやる気はもう記録済みです。</p>
    <p class="italic text-sm text-gray-400">「<%= @comment.body %>」</p>
  </div>

<% else %>
  <h1 class="text-2xl font-medium text-center text-gray-600 mb-6 tracking-wide">
    今日のやる気を入力してください
  </h1>

  <%= form_with url: motivations_path, method: :post, data: { turbo: false }, class: "space-y-6" do %>
    <div>
      <label class="block text-sm font-normal text-gray-500 mb-1">やる気（0〜100）:</label>
      <%= number_field_tag :value, nil, in: 0..100, placeholder: "例: 0", class: "block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-gray-400 focus:border-gray-400 text-gray-700 bg-gray-50" %>
    </div>

    <div>
      <%= submit_tag "とりあえず記録する", class: "w-full bg-gray-400 hover:bg-gray-500 text-white font-normal py-2 px-4 rounded-md shadow-sm transition cursor-default" %>
    </div>
  <% end %>
<% end %>

